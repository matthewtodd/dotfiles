#!/usr/bin/env jq -f

# This jq script maps Github PR json into Things to-do json.
# https://docs.github.com/en/rest/reference/pulls
# https://culturedcode.com/things/support/articles/2803573/

{
  type: "to-do",
  attributes: {
    title: .title,
    notes: (.body + "\r\n" + .html_url),
    when: "today",
    deadline: "tomorrow",
    list: "Code Review",
  }
}
