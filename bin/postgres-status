#!/usr/bin/env ruby

# Using full paths and env setting, since HeadsUp doesn't have much of an
# environment configured.
status = fork do
  exec "PGDATA=/Users/matthew/.homebrew/var/postgres /Users/matthew/.homebrew/bin/pg_ctl status >/dev/null 2>&1"
end

Process.waitpid(status)

if $? == 0
  puts "postgres is running."
end
