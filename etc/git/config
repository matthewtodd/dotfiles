# vim: set ft=gitconfig :
[alias]
	cmp = !open $(git remote get-url matthewtodd | sed -e "s#:#/#" | sed -e "s#git@#https://#")/compare/$(git branch --show-current)
	co = checkout
	pr = "!f() { git fetch -fu origin refs/pull/$1/head:pr/$1 && git checkout pr/$1; }; f"
	st = status
[color]
	ui = auto
[commit]
	gpgsign = true
	verbose = true
[core]
	; fsmonitor = true
[diff]
	algorithm = patience
	indentHeuristic = true
	submodule = log
[fetch]
	parallel = 0
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[gpg]
	format = ssh
[gpg "ssh"]
	program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"
[help]
	autocorrect = 5
[init]
	defaultBranch = trunk
[log]
	decorate = short
[pull]
	ff = only
[rebase]
	autosquash = true
	autostash = true
[status]
	submodulesummary = 1
[submodule]
	recurse = true
[url "git@github.com:"]
	insteadOf = https://github.com/
