[alias]
	cmp = !open $(git remote get-url matthewtodd | sed -e "s#:#/#" | sed -e "s#git@#https://#" | sed -e "s/\\\\.git//")/compare/$(git branch --show-current)
	co = checkout
	st = status
[color]
	ui = auto
[commit]
	gpgsign = true
	verbose = true
[core]
	; fsmonitor = true
[diff]
	algorithm = patience
	indentHeuristic = true
	submodule = log
[fetch]
	parallel = 0
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[gpg]
	format = ssh
[gpg "ssh"]
	program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"
[help]
	autocorrect = 5
[init]
	defaultBranch = trunk
[log]
	decorate = short
	follow = true
[pull]
	ff = only
[rebase]
	autosquash = true
	autostash = true
[status]
	submodulesummary = 1
[submodule]
	recurse = true
