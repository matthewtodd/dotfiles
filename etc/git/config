# vim: set ft=gitconfig :
[alias]
	cmp = !open $(git remote get-url matthewtodd | sed -e "s#:#/#" | sed -e "s#git@#https://#")/compare/$(git branch --show-current)
	co = checkout
	st = status
[color]
	ui = auto
[commit]
	verbose = true
[diff]
	algorithm = patience
	indentHeuristic = true
	submodule = log
[fetch]
	parallel = 0
[help]
	autocorrect = 5
[init]
	defaultBranch = trunk
[log]
	decorate = short
[pull]
	ff = only
[rebase]
	autosquash = true
	autostash = true
[status]
	submodulesummary = 1
[submodule]
	recurse = true
[url "git@github.com:"]
	insteadOf = https://github.com/
[includeIf "gitdir:~/Personal/**"]
	path = ~/Personal/.gitconfig
[includeIf "gitdir:~/Work/**"]
	path = ~/Work/.gitconfig
