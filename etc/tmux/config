# vim: set ft=tmux :
set -g base-index 1
set -g default-command "reattach-to-user-namespace -l $SHELL"
set -g default-terminal screen-256color
set -g pane-active-border-style fg=white
set -g pane-border-style fg=white
set -g prefix C-a
set -g status-bg white
set -g status-fg default
set -g status-left ''
set -g status-right '%l:%M%p'
set -sg escape-time 0
set -wg other-pane-width 80
set -wg pane-base-index 1
set -wg window-status-current-style fg=magenta
set -wg window-status-style fg=default

if-shell "[ \"$COLORFGBG\" = \"12;8\" ]" "set -g pane-active-border-fg black"
if-shell "[ \"$COLORFGBG\" = \"12;8\" ]" "set -g pane-border-fg black"
if-shell "[ \"$COLORFGBG\" = \"12;8\" ]" "set -g status-bg black"

unbind-key -Tcopy-mode-vi Enter
unbind-key C-a
unbind-key C-b

bind-key -Tcopy-mode-vi Enter send -X copy-pipe-and-cancel "reattach-to-user-namespace pbcopy"
bind-key = select-layout main-vertical
bind-key C-a send-prefix
