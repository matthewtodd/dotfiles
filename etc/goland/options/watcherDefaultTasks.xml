<application>
  <component name="ApplicationTasksOptions">
    <global-watchers>
      <TaskOptions>
        <option name="arguments" value="-w -tab 2 $FilePath$" />
        <option name="checkSyntaxErrors" value="true" />
        <option name="description" />
        <option name="exitCodeBehavior" value="ERROR" />
        <option name="fileExtension" value="go" />
        <option name="immediateSync" value="false" />
        <option name="name" value="crlfmt" />
        <option name="output" value="$FilePath$" />
        <option name="outputFilters">
          <array />
        </option>
        <option name="outputFromStdout" value="false" />
        <option name="program" value="$GOPATH$/src/github.com/cockroachdb/cockroach/bin/crlfmt" />
        <option name="runOnExternalChanges" value="false" />
        <option name="scopeName" value="All Changed Files" />
        <option name="trackOnlyRoot" value="false" />
        <option name="workingDir" value="" />
