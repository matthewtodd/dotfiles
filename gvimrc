set background=dark
colorscheme macvim

set columns=190
set cursorline
set guifont=Menlo:h12
set guioptions=egmt
set number

autocmd VimEnter * NERDTree

" let g:netrw_altv=1 " v opens file in the *right* half of a split
" let g:netrw_liststyle=3 " use the tree browser
" let g:netrw_list_hide='\.DS_Store$,.*\.swp$'
" let g:netrw_winsize=140 " open wide vertical splits

